{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-native", // or "react-jsx" if using React 17+
    "lib": ["dom", "esnext"],
    "types": [
      "react",
      "react-native"                  // ‚Üê ensures TS loads those type packages
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "types": ["react", "react-native"]
}
